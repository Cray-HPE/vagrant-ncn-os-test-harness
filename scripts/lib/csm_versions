# The following functions work together to return the qcow2 url by constructing the assets.sh url for a given CSM tag.
THIS_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
source $THIS_DIR/helper_functions

function get_latest_beta_version() {
  # This will need to be modified in the future to crawl multiple pages of responses to find the first beta.
  curl -s https://api.github.com/repos/Cray-HPE/csm/tags?per_page=100 | jq -r 'limit(1; .[].name | select( . | contains("beta")))'
}

function get_release_branch_from_tag() {
  CSM_TAG=$1
  RELEASE_BRANCH="release/$(echo $CSM_TAG | sed -nE 's/[v,V]([0-9]\.[0-9]).*/\1/p')"
  [[ $(echo $RELEASE_BRANCH) == "release/1.5" ]] && RELEASE_BRANCH=main
  echo $RELEASE_BRANCH
}

function get_ncn_assets_url_for_tag() {
  CSM_TAG=$1
  CSM_ASSETS_URL="https://raw.githubusercontent.com/Cray-HPE/csm/$CSM_TAG/assets.sh"
  [[ $(curl -LI ${CSM_ASSETS_URL} -o /dev/null -w '%{http_code}\n' -s) == "200" ]] || \
    exit_w_message "Please provide a valid CSM tag as the first argument. Refer to https://github.com/Cray-HPE/csm/tags"
  echo $CSM_ASSETS_URL
}

function get_ncn_assets_vars() {
  CSM_TAG=$1
  CSM_ASSETS_URL=$(get_ncn_assets_url_for_tag $CSM_TAG)
  echo "Referencing image at CSM tag $CSM_TAG: $CSM_ASSETS_URL"
  # Source the assets.sh stopping at HPE_SIGNING_KEY. This just happens to be how this is formatted right now.
  source /dev/stdin < <(curl -fsSL $CSM_ASSETS_URL | grep -E -B 999 "^HPE_SIGNING_KEY*")
  export KUBERNETES_ASSETS
  export PIT_IMAGE_ID
  export KUBERNETES_IMAGE_ID
  export STORAGE_CEPH_IMAGE_ID
}

function get_k8s_ncn_qcow2_url() {
  SQUASHFS_URL=$1
  QCOW2_URL=$(echo $SQUASHFS_URL | sed 's/squashfs/qcow2/g')
  echo $QCOW2_URL
}
